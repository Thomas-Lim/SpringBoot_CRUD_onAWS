<!-- 해당 내용은 PostsRepository 인터페이스에 연동 됨 -->
{{>layout/header}}

    <h1>스프링부트로 시작하는 웹 서비스 Ver.3</h1>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
            </div>
        </div>
        <br>
        <!-- 목록 출력 영역 -->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>게시글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}} <!-- posts라는 List를 순회. 머스테치의 문법으로 for문과 동일하다 -->
                <tr>
                    <td>{{id}}</td> <!-- List에서 뽑아낸 객체의 필드를 사용 -->
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td><!-- 타이틀을 클릭하면 해당 게시글의 수정 화면으로 이동 -->
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>

{{>layout/footer}}